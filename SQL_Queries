CREATE TABLE BOOK_TJA19 (
	BOOK_ID NUMBER(9),
	BOOK_NAME VARCHAR2(25) NOT NULL,
	BOOK_AUTHOR VARCHAR2(25) NOT NULL,
	BOOK_CATEGORY VARCHAR2(15) CHECK (BOOK_CATEGORY IN ('Comics','Technical','History','Literature')) NOT NULL,
	BOOK_PAGES NUMBER(4) NOT NULL,
	BOOK_LANGUAGE VARCHAR2(10) NOT NULL,
	PRIMARY KEY (BOOK_ID)	
)

CREATE SEQUENCE BOOK_SEQ 
	START WITH 1000
	INCREMENT BY 1
	

